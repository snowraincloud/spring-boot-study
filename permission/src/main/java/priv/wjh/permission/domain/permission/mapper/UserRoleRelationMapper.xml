<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="priv.wjh.permission.domain.permission.dao.UserRoleRelationMapper" >

    <select id="selectByUserId" parameterType="java.lang.Long" resultType="priv.wjh.permission.domain.permission.po.Role">
        select r.id, r.name, r.description, r.create_time, r.status from user_role_relation urr,role r where urr.user_id = #{id} and urr.role_id = r.id and r.status = 1
    </select>

    <insert id="insertSelective" parameterType="com.wanshun.console.orgservice.ao.UserRequestAo">
        insert into user_role_relation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                user_id,
            </if>
            <if test="roleId != null">
                role_id,
            </if>
        </trim>
        values
        <foreach collection="roleId" item="role" separator=",">
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">
                    #{id,jdbcType=BIGINT},
                </if>
                <if test="roleId != null">
                    #{role,jdbcType=BIGINT},
                </if>
            </trim>
        </foreach>
    </insert>
    <insert id="insertList">
        insert into user_role_relation(role_id, user_id)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId}, #{item.userId})
        </foreach>

    </insert>

    <delete id="deleteByUserId">
        delete from user_role_relation where user_id = #{id}
    </delete>

    <delete id="deleteByRoleId">
        delete from user_role_relation where role_id = #{id,jdbcType=BIGINT}
    </delete>

    <select id="selectPermissionByUserId" resultType="priv.wjh.permission.domain.permission.po.Permission">
        select DISTINCT p.id, p.pid, p.name, p.value, p.type, p.uri, p.status, p.create_time
        from user_role_relation urr join role_permission_relation rpr join permission p
        on  urr.role_id = rpr.role_id and rpr.permission_id = p.id where urr.user_id = #{id} and p.status = 1
    </select>
    <select id="selectUserIdByRoleId" resultType="java.lang.Long">
        select user_id
        from user_role_relation
        where role_id = #{roleId}
    </select>

</mapper>