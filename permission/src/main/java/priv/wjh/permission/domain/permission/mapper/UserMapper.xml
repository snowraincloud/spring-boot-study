    <sql id="Base_Column_List">
        id, username, password,  create_time, login_time, status
    </sql>

    <select id="selectByUsername" resultType="priv.wjh.permission.domain.permission.po.User">
        select
        <include refid="Base_Column_List"></include>
        from user where username = #{username} and status = 1
    </select>

    <select id="selectAll" parameterType="com.wanshun.console.orgservice.ao.UserRequestAo" resultType="priv.wjh.permission.domain.permission.po.User">
        select
        <include refid="Base_Column_List"></include>
        from user
        <where>
            <trim suffixOverrides="and">
                <if test="username != null">
                    username like concat(concat('%',#{username,jdbcType=VARCHAR}),'%') and
                </if>
                <if test="createTime != null">
                    create_time > #{createTime} and
                </if>
                <if test="loginTime != null">
                    login_time > #{loginTime} and
                </if>
                <if test="status != null">
                    status = #{status,jdbcType=TINYINT} and
                </if>
            </trim>
        </where>

    </select>
    <select id="selectById" resultType="priv.wjh.permission.domain.permission.po.User">
        select
        <include refid="Base_Column_List"></include>
        from user where id = #{id} and status = 1
    </select>

    <insert id="insertUser" parameterType="com.wanshun.console.orgservice.ao.UserRequestAo" useGeneratedKeys="true" keyProperty="id">
        insert into user(username, password, status)
        values(#{username}, #{password}, #{status})
    </insert>

    <update id="updateStatus"  parameterType="com.wanshun.console.orgservice.ao.UserRequestAo">
        update user set status = #{status,jdbcType=TINYINT} where id = #{id,jdbcType=BIGINT} and id != 1
    </update>

    <update id="updateLoginTimeByLogin">
        update user set login_time = #{loginTime} where id = #{id}
    </update>

    <update id="updatePassword">
        update user set password = #{password} where id = #{id}
    </update>
    <update id="update">
        update user
        set username = #{username},
        status = #{status}
        where id = #{id}
    </update>

</mapper>