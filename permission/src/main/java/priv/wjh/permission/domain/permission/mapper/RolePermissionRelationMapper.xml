<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="priv.wjh.permission.domain.permission.dao.RolePermissionRelationMapper" >

    <sql id="Base_Column_List">
        id, pid, name, value, type, uri, status, create_time
    </sql>

    <select id="selectByRoleId" parameterType="java.lang.Long" resultType="priv.wjh.permission.domain.permission.po.Permission">
        select
        p.id, p.pid, p.name, p.value, p.type, p.uri, p.status, p.create_time
        from role_permission_relation rpr ,permission p where rpr.role_id  = #{id} and rpr .permission_id = p.id and p.status = 1
        order by id
    </select>
    <select id="selectUserIdByPermissionId" resultType="java.lang.Long">
        select user_id
        from role_permission_relation rpr left join user_role_relation urr on rpr.role_id = urr.role_id
        where rpr.permission_id = #{permissionId}
    </select>

    <insert id="insertSelective" parameterType="com.wanshun.console.orgservice.ao.RoleRequestAo" >
        insert into role_permission_relation(role_id, permission_id)
        values
        <foreach collection="permissionId" item="permission" separator=",">
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">
                    #{id,jdbcType=BIGINT},
                </if>
                <if test="permissionId != null">
                    #{permission,jdbcType=BIGINT},
                </if>
            </trim>
        </foreach>
    </insert>

    <delete id="deleteByRoleId">
        delete from role_permission_relation where role_id = #{id,jdbcType=BIGINT}
    </delete>

    <delete id="deleteByPermissionId">
        delete from role_permission_relation where permission_id = #{id,jdbcType=BIGINT}
    </delete>
</mapper>